import wollok.game.*
import bomberman.*
import Enemigo.*
import nivel.*
import bombas.* 
import elementos.*

program Bomberman {
	
	game.title("Bomberman!")
	 
	// l√≠mites del juego
	game.width(20)
	game.height(12)
	
	// fondo
	game.ground("pasto.jpg")
	game.addVisual(protagonista)
	new Nivel1().agregarTodosElementos()
	musica.play()

	

	protagonista.moverse(game.at(1,1))
	keyboard.up().onPressDo({protagonista.subir()})
	keyboard.down().onPressDo({protagonista.bajar()})
	keyboard.left().onPressDo({protagonista.izquierda()})
	keyboard.right().onPressDo({protagonista.derecha()})
	keyboard.space().onPressDo({protagonista.tirarBomba()})
	

	
	game.start()
	
}

	
